    def add(x, y):
        return x + y
    def substract(x, y):
        return x - y
    def multiply(x, y):
        return x * y
    def divide(x, y):
        return x / y
    def resto(x, y):
        return x % y
    def raiz(x, y):
        return x ** 0.5
    def exponenciacion(x, y):
        return x ** y

# Printamos menú

    print("Select operation")
